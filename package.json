{
  "name": "escriba",
  "version": "2.10.0",
  "description": "Logging with steroids",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rimraf dist",
    "postbuild": "tsc --emitDeclarationOnly",
    "build": "babel src --extensions \".js,.ts,.json\" --out-dir dist --copy-files --no-copy-ignored",
    "watch": "babel src --watch --extensions \".js,.ts,.json\" --out-dir dist --copy-files --no-copy-ignored",
    "lint": "eslint -c .eslintrc.json {src,test}/**/*.ts",
    "test": "jest --silent",
    "coveralls": "coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagarme/escriba.git"
  },
  "author": "Pagar.me Pagamentos S/A",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pagarme/escriba/issues"
  },
  "homepage": "https://github.com/pagarme/escriba#readme",
  "dependencies": {
    "circular-json": "0.5.5",
    "cuid": "^2.1.8",
    "dd-trace": "^0.28.1",
    "iron-mask": "1.0.2",
    "moment-timezone": "^0.5.32",
    "pokeprop": "^1.0.0",
    "ramda": "^0.27.1",
    "serialize-error": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/circular-json": "^0.4.0",
    "@types/cuid": "^1.3.1",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/log4js": "^2.3.5",
    "@types/moment-timezone": "^0.5.30",
    "@types/ramda": "^0.27.32",
    "@types/serialize-error": "^4.0.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
